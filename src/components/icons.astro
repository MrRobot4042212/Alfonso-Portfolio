---
const { url , download, socialName } = Astro.props;
---
        <span>
            <a class="link-media-icon" href={url} download={download}>
                <h4
                    class="name-media-icon"
                >
                    {socialName}
                </h4>
                <span class="img-media-icon">
                    <slot class="svg" name="hd-svg"></slot>
                </span>
            </a>
        </span>

<style>
    
.name-media-icon {
    color: #fff;
    font-weight: 400;
    font-size: 15px;
    transition: all 0.2s linear;
}
.img-media-icon {
    color: #fff;
    transition: all 0.5s linear;    
}
.link-media-icon{
    display: flex;
    flex-direction: column;
    align-content: center;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
}
span{
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
}
span :hover *{
    transform: scale(1.05);
    color:#4e7ea9 ;
}
.svg{
    text-align: center;
    align-content: center;
}
a{
    text-decoration: none;
}
</style>